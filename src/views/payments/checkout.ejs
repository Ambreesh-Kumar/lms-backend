<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LMS Checkout</title>
    <link rel="stylesheet" href="/css/payments/base.css" />
    <link rel="stylesheet" href="/css/payments/checkout.css" />
  </head>
  <body>
    <div class="checkout-container">
      <div class="card">
        <div class="header">
          <h1>Complete Your Payment</h1>
          <p>Secure checkout powered by Razorpay</p>
        </div>

        <div class="summary">
          <div class="row">
            <span>Student</span>
            <span><%= studentName %></span>
          </div>
          <div class="row">
            <span>Email</span>
            <span><%= studentEmail %></span>
          </div>
          <div class="row">
            <span>Course</span>
            <span><%= courseTitle %></span>
          </div>
          <hr
            style="
              border: none;
              border-top: 1px solid var(--border);
              margin: 12px 0;
            "
          />
          <div class="row">
            <strong>Total</strong>
            <strong>â‚¹<%= amount / 100 %></strong>
          </div>
        </div>

        <button id="pay-btn" class="pay-btn">Pay â‚¹<%= amount / 100 %></button>

        <div class="footer">
          <div class="secure">ðŸ”’ 100% Secure Payments</div>
          <div>By continuing, you agree to our terms</div>
        </div>
      </div>
    </div>

    <!-- Razorpay -->
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
      const payBtn = document.getElementById("pay-btn");

      const options = {
        key: "<%= razorpayKeyId %>",
        amount: Number(<%= amount %>),
        currency: "INR",
        name: "LMS Platform",
        description: "<%= courseTitle %>",
        order_id: "<%= orderId %>",
        prefill: {
          name: "<%= studentName %>",
          email: "<%= studentEmail %>",
        },
        theme: {
          color: "#1976d2",
        },
        handler: async function (response) {
          try {
            const res = await fetch("/payments/ejs/verify", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                razorpay_payment_id: response.razorpay_payment_id,
                razorpay_order_id: response.razorpay_order_id,
                razorpay_signature: response.razorpay_signature,
              }),
            });

            const data = await res.json();

            if (data.success) {
              window.location.href = "/payments/ejs/success";
            } else {
              window.location.href = "/payments/ejs/failure";
            }
          } catch (err) {
            window.location.href = "/payments/ejs/failure";
          }
        },
        modal: {
          ondismiss: function () {
            window.location.href = "/payments/ejs/cancel";
          },
        },
      };

      payBtn.onclick = function () {
        payBtn.disabled = true;
        const rzp = new Razorpay(options);
        rzp.open();
      };
    </script>
  </body>
</html>
